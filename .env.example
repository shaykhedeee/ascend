# ═══════════════════════════════════════════════════════════════════════════════
# ASCEND — Environment Variables
# Copy this file to .env.local and fill in your values
# ═══════════════════════════════════════════════════════════════════════════════

# ─── Clerk Authentication ─────────────────────────────────────────────────────
# Get keys at: https://dashboard.clerk.com → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_JWT_ISSUER_DOMAIN=your-domain.clerk.accounts.dev
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# ─── Convex (Real-time Database) ─────────────────────────────────────────────
# Run `npx convex dev` to get your project URL
CONVEX_DEPLOYMENT=dev:your-project-name
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# ─── AI API Keys (server-side only — do NOT prefix with NEXT_PUBLIC_) ─────────
# Groq (primary — free tier: 14,400 req/day)
GROQ_API_KEY=

# Google Gemini (secondary — free tier: 60 req/min)
GOOGLE_AI_STUDIO_KEY=

# OpenRouter (fallback — has free models)
OPENROUTER_API_KEY=

# AI/ML API (chatbot)
AIML_API_KEY=

# ─── AI Configuration ────────────────────────────────────────────────────────
NEXT_PUBLIC_AI_PROVIDER=groq
NEXT_PUBLIC_AI_ENABLED=true
NEXT_PUBLIC_PUTER_ENABLED=true
NEXT_PUBLIC_AI_MAX_TOKENS_FREE=512
NEXT_PUBLIC_AI_MAX_TOKENS_PREMIUM=2048

# ─── App Configuration ───────────────────────────────────────────────────────
NEXT_PUBLIC_APP_NAME=ASCEND
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://ascend-ashen-seven.vercel.app
